<UserControl x:Class="mToolkitFrameworkExtensions.Windows.Elements.ImageGridItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:mToolkitFrameworkExtensions.Windows.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="200" MouseUp="UserControl_MouseUp" Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Image Name="Image" Grid.Row="0" Grid.RowSpan="2"/>
        <Grid Name="Highlight" Visibility="Hidden" Grid.Row="0" Grid.RowSpan="2" Background="Teal" Opacity="0.5"/>
        <Label Name="ImageName" Grid.Row="1"  Background="White" Content="Test" />
    </Grid>
</UserControl>
