<UserControl x:Class="mToolkitFrameworkExtensions.Windows.VariableUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:external="clr-namespace:mToolkitFrameworkExtensions.Windows"
             mc:Ignorable="d" 
             d:DesignHeight="220" d:DesignWidth="360">
    <Grid>
        <TextBox KeyUp="TextBox_KeyUp" GotFocus="textBox_GotFocus" LostFocus="textBox_LostFocus" Name="textBox" VerticalAlignment="Top" />
        <Border Background="White" BorderBrush="Black" BorderThickness="1" Margin="0,18,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,0,0,0">
                <StackPanel Name="resultStack"></StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
