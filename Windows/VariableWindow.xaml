<Window x:Class="mToolkitFrameworkExtensions.Windows.VariableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mToolkitFrameworkExtensions.Windows"
        mc:Ignorable="d"
        Title="Please Enter A Value" Height="240" Width="360"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <local:VariableUserControl x:Name="Input" Margin="10,25,10,35" RenderTransformOrigin="0.5,0.5"  />
        <Button Name="ConfirmButton" Content="Confirm" Margin="0,0,10,10" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="60" Click="Button_Click"/>
        <Label Name="Label" Content="Please enter a value:" Margin="10,1,10,0" Height="26" VerticalAlignment="Top"/>
    </Grid>
</Window>
